{
  "fields": [
    {
      "type": "text",
      "name": "name",
      "label": "Full Name",
      "defaultValue": "",
      "validation": {
        "required": true,
        "minLength": 3
      },
      "placeholder": "Enter your full name",
      "errors": {
        "minLength": "Name must be at least 2 characters"
      }
    },
    {
      "type": "tel",
      "name": "phone",
      "label": "Phone Number",
      "defaultValue": "",
      "validation": {
        "required": true,
        "number": true
      },
      "placeholder": "ex. 1234567890",
      "errors": {
        "number": "Phone must be a number"
      }
    },
    {
      "type": "select",
      "name": "interest",
      "label": "Area of Interest",
      "options": ["Mountains", "Oceans", "Deserts"],
      "defaultValue": "",
      "validation": {
        "required": true
      },
      "placeholder": "Select one focus interest"
    },
    {
      "type": "textarea",
      "name": "description",
      "label": "Description",
      "defaultValue": "",
      "validation": {
        "required": false,
        "maxLength": 500
      },
      "placeholder": "Enter a brief description",
      "errors": {
        "maxLength": "Description must be less than 500 characters"
      }
    },
    {
      "type": "checkbox",
      "name": "travel",
      "label": "Travel Methods",
      "options": ["Car", "Bus", "Train"],
      "defaultValue": [],
      "validation": {
        "required": true
      },
      "placeholder": "Select all that apply",
      "errors": {
        "required": "At least one travel method must be selected"
      }
    }
  ],
  "submit": {
    "label": "Send",
    "errors": {
      "required": "All fields must be completed"
    }
  }
}